{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 0,
    "exclusive": true,
    "fixed-center": true,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "custom/mako",
        "idle_inhibitor",
        "memory",
        "cpu",
        "pulseaudio",
        "clock",
        "tray"
    ],
    "include": [
        "$XDG_CONFIG_HOME/waybar/modules/clock.json",
        "$XDG_CONFIG_HOME/waybar/modules/cpu.json",
        "$XDG_CONFIG_HOME/waybar/modules/custom_mako.json",
        "$XDG_CONFIG_HOME/waybar/modules/idle_inhibitor.json",
        "$XDG_CONFIG_HOME/waybar/modules/memory.json",
        "$XDG_CONFIG_HOME/waybar/modules/pulseaudio.json"
    ]
}